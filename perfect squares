//program to find perfect squares from 0 to 1//
#include<stdio.h>
#include<math.h>
#include<conio.h>
main()
{
	int i,count,x;
	float c;
	printf("\n\n");
	printf("perfectsquaresfrom1t0500\n");
	count=0;
	for (i=1;i<=500;i++)
	{c=sqrt(i);
	x-floor(c);
	if (c==x)
	{
		printf("\t%5d",i);
		count++;
	}
} printf("\n\n total perfect squares =%d\n",count);
getch();
	
	}
